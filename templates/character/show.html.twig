{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ character.identifier }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.name }}</td>
            </tr>
            <tr>
                <th>Kind</th>
                <td>{{ character.kind }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ character.surname }}</td>
            </tr>
            <tr>
                <th>Caste</th>
                <td>{{ character.caste }}</td>
            </tr>
            <tr>
                <th>Knowledge</th>
                <td>{{ character.knowledge }}</td>
            </tr>
            <tr>
                <th>Intelligence</th>
                <td>{{ character.intelligence }}</td>
            </tr>
            <tr>
                <th>Life</th>
                <td>{{ character.life }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ character.image }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ character.created ? character.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{{ character.modified ? character.modified|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
{% endblock %}
